$
]
#answer[
  $y_1^2-y_2^2-y_3^2$\
  $x_1 = y_1;x_2=y_2/sqrt(1/4);x_3=y_3/sqrt(2)$\
  $(e_1+e_2,-e_1+e_2,-2/sqrt(2)e_1-1/sqrt(2)e_2+1/sqrt(2)e_3)$
]
